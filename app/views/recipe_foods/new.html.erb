


<h1 class="inventory-heading">Create New Recipe Food</h1>

  <%= form_with model: @recipe_food, url:  user_recipe_recipe_foods_path,class: 'inventory-form'  do |form| %>
    <% @foods.each do |food| %>
    
      <%= hidden_field_tag 'food_id', food.id %>
 
  <% end %>


  <%= form.label :quantity, "Quantity" %>
  <%= form.number_field :quantity %>
  <%= form.label :food_id, "Food" %>
  <%= form.select :food_id, Food.all.map { |food| [food.name, food.id] } %>
  <%= form.submit "Add food" %>
<% end %>


